<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#9EFADA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:id="@+id/ivImage_List_item"
            android:src="@drawable/s20_699"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tvName_List_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SamSung A32"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/arbutus_slab"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPrice_List_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100 $"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/red"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:id="@+id/ivUpdate"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/baseline_update_24"
                            />
                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/delete_forever24" />
                </LinearLayout>

        </LinearLayout>
</LinearLayout>