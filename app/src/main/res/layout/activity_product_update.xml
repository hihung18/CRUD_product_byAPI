<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fill_backgound"
    android:orientation="vertical"
    tools:context=".Activity.ProductUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A6F683"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPreviousProductUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_keyboard_backspace_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PRODUCT UPDATE"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3F3DE"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtNameUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:inputType="textCapWords"
                android:paddingLeft="30dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:paddingLeft="10dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPriceUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Price"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:paddingLeft="10dp"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCategoryUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="category"
                    android:inputType="number"
                    android:paddingLeft="30dp"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvClickHereUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="Click Here"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:paddingLeft="10dp"
                android:text="Remain"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtRemainUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Remain"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:paddingLeft="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtDescriptionUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:paddingLeft="30dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Feature"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillbackgroud_type"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="Brand"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spnBrandUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillbackgroud_type"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="Camera"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spnCameraUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillbackgroud_type"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="Ram"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spnRAMUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillbackgroud_type"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="ROM"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spnROMUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnUpdateProduct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_style"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#208021"
        android:fontFamily="@font/baloo"
        android:padding="10dp"
        />
</LinearLayout>