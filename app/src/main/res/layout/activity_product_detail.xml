<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#73EDD0"
    tools:context=".Activity.ProductDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A6F683"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPreviousProductDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_keyboard_backspace_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PRODUCT DETAIL"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_fill_backgound"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivImgDetail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="10dp"
                android:gravity="center"
                android:src="@drawable/s20_699"/>
            <TextView
                android:id="@+id/tvProductNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:paddingLeft="25dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tvPriceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="699"
                android:paddingLeft="25dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:textColor="@color/red"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Brand:"
                    android:paddingLeft="25dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvBrandDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:paddingLeft="25dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Camera:"
                    android:paddingLeft="25dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvCameraDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:paddingLeft="25dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="RAM:"
                    android:paddingLeft="25dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvRAMDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAM"
                    android:paddingLeft="25dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="ROM:"
                    android:paddingLeft="25dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvROMDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ROM"
                    android:paddingLeft="25dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:paddingLeft="25dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvCategoryDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:paddingLeft="25dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Description:"
                android:drawableLeft="@drawable/baseline_description_24"
                android:paddingLeft="25dp"
                android:textStyle="italic|bold"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tvDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Description"
                android:paddingLeft="25dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>